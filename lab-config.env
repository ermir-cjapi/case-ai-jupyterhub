# Lab Environment Configuration
# Configured for your NVIDIA server setup
#
# This file sets environment variables used by:
# - images/build_base_image.sh (Docker image build)
# - helm/deploy_jhub_helm.sh (Helm deployment)
# - k8s-manifests scripts (if using K8s manifests)

# Docker Hub Registry
export REGISTRY="docker.io/ermircjapi"
export IMAGE_NAME="jupyterhub-notebook"
export IMAGE_TAG="latest"

# JupyterHub configuration
export JHUB_NAMESPACE="jupyterhub-test"
export JHUB_HOST="jupyterhub.ccrolabs.com"
export RELEASE_NAME="jhub-v1"

# Kubernetes configuration
export STORAGE_CLASS="local-path"
export VALUES_FILE="helm/values-helm.yaml"
export CHART_VERSION="2.0.0"

# Print configuration
echo "=== Lab Configuration ==="
echo "Registry: ${REGISTRY}"
echo "Image: ${REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG}"
echo "Namespace: ${JHUB_NAMESPACE}"
echo "Host: ${JHUB_HOST}"
echo "Storage Class: ${STORAGE_CLASS}"
echo "========================="
