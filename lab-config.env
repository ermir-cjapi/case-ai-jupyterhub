# Lab Environment Configuration
# Simple config for local development and deployment
#
# Usage:
#   source lab-config.env
#   ./images/build_base_image.sh
#   ./helm/deploy_jhub_helm.sh

# Docker image configuration (used by build_base_image.sh)
export REGISTRY="docker.io/ermircjapi"
export IMAGE_NAME="jupyterhub-notebook"
export IMAGE_TAG="v2.3"  # Use /home/jovyan as WORKDIR to avoid PVC permission issues

# Helm deployment configuration (used by deploy_jhub_helm.sh)
export NAMESPACE="jupyterhub-test"
export RELEASE_NAME="jhub-v1"
export VALUES_FILE="helm/values-helm.yaml"
export CHART_VERSION="2.0.0"

# Print what will be used
echo "=== Configuration Loaded ==="
echo "Docker Image: ${REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG}"
echo "Helm Release: ${RELEASE_NAME} (namespace: ${NAMESPACE})"
echo "============================="
